# Copy this file to .env.local (Next.js) and fill in needed secrets.

# OpenAI (for AI-generated report). If omitted, aiReport will be null.
OPENAI_API_KEY=

# Optional: override model
# OPENAI_MODEL=gpt-4o-mini

# ScrapingBee (optional). Enable if you want to proxy requests:
SCRAPINGBEE_API_KEY=
USE_SCRAPINGBEE=false

# Cache configuration
CACHE_TTL_SECONDS=900
CACHE_MAX_ITEMS=200

# Basic rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Logging verbosity (error|warn|info|debug)
LOG_LEVEL=info

# AI report toggle (set to 0 to disable)
AI_REPORT_ENABLED=1
